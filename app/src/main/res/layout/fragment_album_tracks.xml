<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <Button
      android:id="@+id/album_tracks__play"
      style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/fab_margin"
      android:backgroundTint="@color/accent"
      android:contentDescription="@string/album_tracks__play__content_description"
      android:src="@drawable/ic_action_play"
      android:text="@string/album_tracks__play"
      app:layout_constraintBottom_toTopOf="@id/album_tracks__track_list"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/album_tracks__artist" />

  <ImageView
      android:id="@+id/album_tracks__cover"
      android:layout_width="@dimen/cover_size"
      android:layout_height="@dimen/cover_size"
      android:layout_marginTop="24dp"
      android:contentDescription="@string/album_tracks__cover_content"
      android:src="@drawable/ic_image_no_cover"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <ImageView
      android:id="@+id/album_tracks__empty_icon"
      style="@style/empty_view_image"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:src="@drawable/ic_music_note_black_80dp"
      app:tint="@color/light_gray" />

  <TextView
      android:id="@+id/album_tracks__album"
      style="@style/TextAppearance.MaterialComponents.Headline5"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="8dp"
      android:layout_marginEnd="16dp"
      android:gravity="center"
      android:textColor="@color/primary_text"
      android:textSize="20sp"
      app:layout_constraintBottom_toTopOf="@id/album_tracks__artist"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/album_tracks__cover"
      tools:text="Album" />

  <TextView
      android:id="@+id/album_tracks__artist"
      style="@style/TextAppearance.MaterialComponents.Subtitle1"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"
      android:layout_marginBottom="8dp"
      android:gravity="center"
      android:textColor="@color/secondary_text"
      android:textSize="14sp"
      app:layout_constraintBottom_toTopOf="@id/album_tracks__play"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/album_tracks__album"
      tools:text="Artist" />

  <TextView
      android:id="@+id/album_tracks__empty_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginTop="16dp"
      android:layout_marginEnd="8dp"
      android:layout_marginBottom="16dp"
      android:fontFamily="sans-serif-light"
      android:text="@string/no_results_found"
      android:textColor="@color/primary_text"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/album_tracks__empty_icon"
      app:layout_constraintVertical_bias="0" />

  <androidx.constraintlayout.widget.Group
      android:id="@+id/album_tracks__empty_view"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:visibility="gone"
      app:constraint_referenced_ids="album_tracks__empty_icon, album_tracks__empty_title" />

  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/album_tracks__track_list"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_marginTop="@dimen/small_margin"
      android:layout_marginBottom="@dimen/small_margin"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/album_tracks__play"
      tools:listitem="@layout/listitem_dual" />
</androidx.constraintlayout.widget.ConstraintLayout>

